<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div class="container">
        <h1 class="d-flex justify-content-center my-5">Campgrounds</h1>

        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) { %>
                            <img src="<%=campground.images[0].url%>" alt="" class="img-fluid">
                            <% } else {%>
                                <img src="https://verumpe.com.br/wp-content/themes/consultix/images/no-image-found-360x250.png"
                                    alt="" class="img-fluid">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body" style="border: none;">
                            <h5 class="card title">
                                <%=campground.title%>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=campground.location%>
                                </small>
                            </p>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View
                                <%=campground.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const campgrounds = { features: <%-JSON.stringify(campgrounds) %>};
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    </script>
    <script src="/javascripts/clusterMap.js"></script>