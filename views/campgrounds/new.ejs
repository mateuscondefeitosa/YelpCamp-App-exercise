<% layout('layouts/boilerplate')%>
    <h1>Add a new Campground!</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Campground Name</label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <button>Add Campground</button>
    </form>
    <div>
        <a href="/campgrounds/">Back to all campgrounds</a>
    </div>